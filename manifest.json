{
    "description": "Demonstrating webRequests",
    "manifest_version": 2,
    "name": "webRequest-demo",
    "version": "1.0",
  
    "permissions": [
      "webRequest",
      "<all_urls>",
      "storage"
    ],
  
    "background": {
      "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "InvadeDetect",
        "default_popup": "counter_page.html"
      }
  }